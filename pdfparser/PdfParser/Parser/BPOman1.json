{
  "InputBlocks": [
    
    {
      "Type": "Text",
      "Name": "BoreholeName",
      "StartMarker": "Site:",
      "SearchMethod": "CellWithMarker"
    },
    {
      "Type": "Table",
      "Name": "DDR",
      "StartMarker": "Page 1 of 80",
      "EndMarker": "Page 80 of 80",
      "SearchMethod": "RowsBetweenMarkers",

      "TableColumns": [
      {
        "Type": "Date",
        "Name": "ReportDate",
        "StartMarker": "Date:",
        "SearchMethod": "CellBelowMarker",
        "Formats": ["dd/MM/yyyy","MM/dd/yyyy"]
      },
  		{
          "Name": "StartTime",
          "Type": "Time",
          "IsKeyColumn": true,
		  "ReplaceValues": {
            "^([0-9]{2}:[0-9]{2})\\s*-.*": "$1"
          },
          "DefaultValue": "",	
		  "Formats": ["HH:mm","HH:mm -"],
          "StartMarker": "From - To",
          "AddDayIfZero":true,
          "IsObligatory": true
        },
        {
          "Name": "Duration",
          "Type": "Hours",
          "StartMarker": "Hrs",
          "DecimalSeparator": ".",
          "IsObligatory": true
        },
        {
          "Name": "Phase",
          "Type": "Text",
          "StartMarker": "Phase",
          "IsObligatory": true
        },
		{
          "Name": "Task",
          "Type": "Text",
          "StartMarker": "Task",
          "IsObligatory": true
        },
        {
          "Name": "Activity",
          "Type": "Text",
          "StartMarker": "Task",
          "IsObligatory": true
        },
		{
          "Name": "Code",
          "Type": "Text",
          "StartMarker": "Code",
          "IsObligatory": true
        },
        {
          "Name": "Comments",
          "Type": "Multiline",
          "StartMarker": "Description of Operations",
          "IsObligatory": true
        }
      ]
    }
  ],
  "OutputTable": {
    "Columns": [
      {
        "Name": "BoreholeName",
        "HeaderText": "Borehole",
        "SourceBlocks": ["BoreholeName"]
      },
      {
        "Name": "DailyCost",
        "HeaderText": "Daily Cost",
        "Mode": "Cell"
      },
      {
        "Name": "Phase",
        "HeaderText": "Phase",
        "SourceBlocks": ["DDR.Phase"],
        "Mode": "Cell"
      },
      {
        "Name": "BoreholeSection",
        "HeaderText": "Borehole Section",
        "Mode": "Cell"
      },
      {
        "Name": "StartDate",
        "HeaderText": "Start Time",
        "SourceBlocks": ["ReportDate", "DDR.StartTime"],
        "Mode": "Cell"
      },
      {
        "Name": "EndDate",
        "HeaderText": "End Time",
        "Format": null,
        "SourceBlocks": ["ReportDate", "DDR.StartTime", "DDR.Duration"],
        "Mode": "Cell"
      },
      {
        "Name": "Duration",
        "HeaderText": "Duration(h)",
		"SourceBlocks": ["DDR.Duration"],
        "Mode": "Cell"
      },
      {
        "Name": "StartDepth",
        "HeaderText": "Start Depth(m)",
        "Mode": "Cell"
      },
      {
        "Name": "EndDepth",
        "HeaderText": "End Depth(m)",
        "Mode": "Cell"
      },
      {
        "Name": "Phase",
        "HeaderText": "Phase",
        "SourceBlocks": ["DDR.Phase"],
        "Mode": "Cell"
      },
      {
        "Name": "Code",
        "HeaderText": "Operation Code",
        "SourceBlocks": ["DDR.Task"],
        "Mode": "Cell"
      },
            {
        "Name": "ActivityCode",
        "HeaderText": "Activity Code",
        "SourceBlocks": ["DDR.Activity"],
        "Mode": "Cell"
      },
      {
        "Name": "SubCode",
        "HeaderText": "Sub Code",
        "Mode": "Cell"
      },
      {
        "Name": "Planned",
        "HeaderText": "Planned",
        "Mode": "Cell"
      },
      {
        "Name": "TimeType",
        "HeaderText": "Time Classification",
        "Mode": "Cell",
		"SourceBlocks": ["DDR.Code"],
		"ReplaceValues": {
          "^P.*$": "Productive"
